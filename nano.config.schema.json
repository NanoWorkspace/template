{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/CamilleAbella/NanoTemplate/master/nano.config.schema.json",
  "title": "Nano Config",
  "description": "Configuration file for bots that use Nano template.",
  "type": "object",
  "definitions": {
    "SnowFlake": {
      "description": "SnowFlake",
      "type": "string",
      "pattern": "^\\d{17,21}$"
    },
    "MessageEmbedOptions": {
      "description": "MessageEmbedOptions",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "timestamp": {
          "type": ["number", "null"]
        },
        "color": {
          "type": "string",
          "pattern": "^#[\\da-fA-F]{6}$"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "value"],
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        },
        "author": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string"
            },
            "iconURL": {
              "type": "string"
            },
            "proxyIconURL": {
              "type": "string"
            }
          }
        },
        "thumbnail": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "footer": {
          "type": "object",
          "required": ["text"],
          "properties": {
            "text": {
              "type": "string"
            },
            "iconURL": {
              "type": "string"
            },
            "proxyIconURL": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": ["prefix"],
  "properties": {
    "prefix": {
      "description": "The base prefix of your bot.",
      "type": "string"
    },
    "token": {
      "description": "The Discord API token of your bot.",
      "type": "string"
    },
    "clientOptions": {
      "type": "object",
      "properties": {
        "shards": {
          "type": ["number", "array", "string"],
          "pattern": "^auto$",
          "items": {
            "type": "number"
          }
        },
        "shardCount": {
          "type": "number"
        },
        "messageCacheMaxSize": {
          "type": "number"
        },
        "messageCacheLifetime": {
          "type": "number"
        },
        "messageSweepInterval": {
          "type": "number"
        },
        "fetchAllMembers": {
          "type": "boolean"
        },
        "disableMentions": {
          "enum": ["none", "all", "everyone"]
        },
        "allowedMentions": {
          "type": "object",
          "properties": {
            "parse": {
              "type": "array",
              "items": {
                "enum": ["roles", "users", "everyone"]
              }
            },
            "roles": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SnowFlake"
              }
            },
            "users": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SnowFlake"
              }
            }
          }
        },
        "partials": {
          "type": "array",
          "items": {
            "enum": ["USER", "CHANNEL", "GUILD_MEMBER", "MESSAGE", "REACTION"]
          }
        },
        "restWsBridgeTimeout": {
          "type": "number"
        },
        "restTimeOffset": {
          "type": "number"
        },
        "restRequestTimeout": {
          "type": "number"
        },
        "restSweepInterval": {
          "type": "number"
        },
        "retryLimit": {
          "type": "number"
        },
        "presence": {
          "type": "object",
          "properties": {
            "status": {
              "enum": ["online", "idle", "dnd", "invisible"]
            },
            "afk": {
              "type": "boolean"
            },
            "activity": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": ["string", "number"],
                  "pattern": "^(?:PLAYING|STREAMING|LISTENING|WATCHING|CUSTOM_STATUS)$"
                },
                "url": {
                  "type": "string"
                }
              }
            },
            "shardID": {
              "type": ["array", "number"],
              "items": {
                "type": "number"
              }
            }
          }
        },
        "ws": {
          "type": "object"
        },
        "http": {
          "type": "object",
          "properties": {
            "api": {
              "type": "string"
            },
            "version": {
              "type": "number"
            },
            "host": {
              "type": "string"
            },
            "cdn": {
              "type": "string"
            },
            "invite": {
              "type": "string"
            }
          }
        }
      }
    },
    "embedTemplates": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/MessageEmbedOptions"
      },
      "properties": {
        "default": {
          "$ref": "#/definitions/MessageEmbedOptions"
        },
        "success": {
          "$ref": "#/definitions/MessageEmbedOptions"
        },
        "error": {
          "$ref": "#/definitions/MessageEmbedOptions"
        },
        "log": {
          "$ref": "#/definitions/MessageEmbedOptions"
        }
      }
    }
  }
}
